{
  "name": "productivity-suite",
  "version": "1.0.0",
  "description": "A comprehensive backend system for productivity management with authentication, CRUD operations, real-time communication, and dual API support",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:property": "jest --testNamePattern=\"Property\"",
    "test:integration": "jest --testNamePattern=\"Integration\""
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "rest-api",
    "graphql",
    "socket.io",
    "productivity",
    "task-management",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "socket.io": "^4.7.2",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "fast-check": "^3.13.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1",
    "socket.io-client": "^4.7.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}